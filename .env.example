# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=agentic_workflow
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# BullMQ Configuration
QUEUE_CONCURRENCY=5

# Logging
LOG_LEVEL=info

# Security
JWT_SECRET=your-secret-key-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here-change-in-production

# CORS
CORS_ORIGIN=*

# Chain RPC URLs (required for supported chains)
ETHEREUM_SEPOLIA_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com
ARBITRUM_SEPOLIA_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc

# Safe contract addresses (same across chains; optional per-chain overrides: SAFE_WALLET_FACTORY_ADDRESS_11155111, _421614, _42161, _8453)
SAFE_WALLET_FACTORY_ADDRESS=0xd2e676fD8737102CE8D3bfdd21D07F5260e99322
SAFE_MODULE_ADDRESS=0x107135DCf89CB3617B16FA8D0D03e446ED5947bd

# ENS Contracts (Mainnet)
SUBDOMAIN_REGISTRY_ADDRESS_1=0x4F26F3aAFff8527147CC25816274aEA370ba2a8C
PRICER_ADDRESS_1=0xb11a6FAABd62A66423772497f03390B0992Fb615

# ENS Contracts (Testnet)
SUBDOMAIN_REGISTRY_ADDRESS_11155111=0xc1dD62Fe69D343e7457E373AE038a1CB541D26d2
PRICER_ADDRESS_11155111=0xbdbD8120Ad38085A202f9FB60DBA70e4EE73A17e

# Slack OAuth Configuration
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
API_BASE_URL=http://localhost:3000

SMTP_HOST=smtp.gmail.com              
SMTP_PORT=587                     
SMTP_SECURE=false

# SMTP Authentication
SMTP_USER=
SMTP_PASS=

# Email Sender Information
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=

# Agent Service Key (same as BACKEND_SERVICE_KEY in agent service)
AGENT_SERVICE_KEY=your-agent-service-key-here-change-in-production

# Ostium service (internal)
OSTIUM_ENABLED=false
OSTIUM_SERVICE_BASE_URL=http://localhost:5002
OSTIUM_SERVICE_HMAC_SECRET=
# Optional timeout in ms for backend->ostium-service requests
# OSTIUM_REQUEST_TIMEOUT_MS=30000
# Optional feature flag for aggregated setup status endpoint
OSTIUM_SETUP_OVERVIEW_ENABLED=true
OSTIUM_DELEGATE_ADDRESS=
OSTIUM_TRADING_CONTRACT_TESTNET=
OSTIUM_TRADING_CONTRACT_MAINNET=
# Optional overrides (defaults are pulled from official Ostium SDK network config)
OSTIUM_TRADING_STORAGE_CONTRACT_TESTNET=
OSTIUM_TRADING_STORAGE_CONTRACT_MAINNET=
OSTIUM_USDC_CONTRACT_TESTNET=
OSTIUM_USDC_CONTRACT_MAINNET=

# Telegram: bot token is required for outbound messages (workflow notifications, verification replies).
# Leave TELEGRAM_WEBHOOK_BASE_URL and TELEGRAM_WEBHOOK_SECRET unset when the agent service is running:
# only one receiver (webhook or polling) is allowed per bot token. Agent owns incoming updates; backend only sends.
# TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here-change-in-production
# Optional webhook (set only if agent is NOT running or uses a different bot):
# TELEGRAM_WEBHOOK_BASE_URL=https://your-subdomain.ngrok-free.app
# TELEGRAM_WEBHOOK_SECRET=random-secret-path-segment
